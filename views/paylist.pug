doctype html
include head.pug
body
  include menu_login.pug
  .container-fluid.theme-showcase(role='main')
    .row
      .col-md-12.col-xs-12
        h2 축의금명부
        div
          .row
            .col-md-3 신랑측/신부측
            .col-md-2 성함
            .col-md-2 금액
            .col-md-3 메모
            .col-md-2 메뉴
          each checkitem in list 
            .col-md-3 #{checkitem.side}
            .col-md-2 #{checkitem.name}
            .col-md-2 #{checkitem.price}만원
            .col-md-3 #{checkitem.memo}
            .col-md-2 
              .btn.btn-default 수정
        .row
          .col-md-12.col-xs-12
            button#insert.btn.btn-default(type='submit') 항목 추가하기
  script.
    $(document).ready(function(){
      $('a').click(function()
      {
        if($(this).parent().next().next().text() == "completed")
        {
            var result = confirm('Do you want to study again?')
            if(result)
            {
              event.preventDefault();
              var url = $(this).attr('href').replace('/play/','/playagain/')
              window.location.replace(url);
            }
            else
            {
              event.preventDefault();
            }
        }

      });
    })
